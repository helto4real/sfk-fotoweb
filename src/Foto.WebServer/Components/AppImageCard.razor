@using MudBlazor.Utilities

<MudPaper Elevation="0" Outlined="false" MinWidth="@($"{MaxWidth}px")" MaxWidth="@($"{MaxWidth}px")">
    <MudCard>
        <MudCardMedia Image="@Image"  Height="@Height" Style="object-fit: contain" />
        <MudCardContent>
            <MudText  Typo="Typo.body2">@Title</MudText>
            <MudText Style="color: var(--mud-palette-lines-inputs);" Typo="Typo.caption">@Description</MudText>
        </MudCardContent>
        @if (Actions is not null)
        {
            <MudCardActions Style="@BorderStyle">
                @Actions
            </MudCardActions>
        }
    </MudCard>
</MudPaper>

@code {
    public string BorderStyle => $"border-top-width: thin; border-top-color: var(--mud-palette-action-disabled-background)";
    [Parameter]
    public int MaxWidth { get; set; } = 250;
    
    [Parameter]
    public int Height { get; set; } = 166;
    
    [Parameter]
    public string Image { get; set; } = default!;

    [Parameter]
    public string Title { get; set; } = default!;

    [Parameter]
    public string Description { get; set; } = default!;

    [Parameter]
    public RenderFragment? Actions { get; set; }
}